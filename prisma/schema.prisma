generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id              String        @id @default(uuid())
  creatorName     String      
  creatorPhone    String      
  creatorEmail    String      
  numberPlayers   Int         
  registeredPlayers Int
  confirmedPlayers Int           
  location        String      
  date            DateTime    
  time            String      
  duration        Int         
  isFree          Boolean     
  pricePerPerson  Float?      
  accountType     String?     
  accountNumber   String?     
  additionalInfo  String?     
  mapLink         String?     
  participants    Participant[] @relation("MatchParticipants") 
}

model Participant {
  id                Int      @id @default(autoincrement())
  name              String   
  phone             String   
  email             String   
  paymentReceiptUrl String   
  matchId           String  
  match             Match   @relation("MatchParticipants", fields: [matchId], references: [id]) 
}
